<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/forumCard">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/postedByImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:id="@+id/postedBy"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert_black_24dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/forumImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/add_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/like"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_favorite_black_24dp"
                    android:tint="#D3D3D3"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/likeCount"
                    android:text="@string/nil"/>

                <ImageButton
                    android:id="@+id/comment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_comment_black_24dp"
                    android:tint="#D3D3D3"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/commentCount"
                    android:text="@string/nil"/>

            </LinearLayout>

            <TextView
                android:id="@+id/forumTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forumContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:scrollHorizontally="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/readMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/more"
                android:textSize="14sp"
                android:scrollHorizontally="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="5dp"
                android:textColor="@color/colorAccent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="20dp"
        android:alpha="0.3"
        android:background="@color/colorAccent" />


    </LinearLayout>